# FlowPoint Development Environment Configuration
# Copy this file to .env and update with your values
# Usage: cp .env.example .env

# =============================================================================
# FlowPoint Application Settings
# =============================================================================
AP_APP_TITLE=FlowPoint
AP_FAVICON_URL=/favicon.ico
AP_FRONTEND_URL=https://flowpoint-dev.pointsolutions.me
AP_EXECUTION_MODE=UNSANDBOXED
AP_ENVIRONMENT=dev
AP_TELEMETRY_ENABLED=false

# =============================================================================
# Database Configuration - PostgreSQL (FlowPoint)
# =============================================================================
AP_DB_TYPE=POSTGRES
AP_POSTGRES_DATABASE=flowpoint
AP_POSTGRES_HOST=postgres
AP_POSTGRES_PORT=5432
AP_POSTGRES_USERNAME=postgres
AP_POSTGRES_PASSWORD=changeme_dev_password

# =============================================================================
# Redis Configuration (FlowPoint)
# =============================================================================
AP_REDIS_HOST=redis
AP_REDIS_PORT=6379

# =============================================================================
# Security Keys (FlowPoint)
# Generate with: openssl rand -hex 32
# =============================================================================
AP_ENCRYPTION_KEY=your_encryption_key_here_use_openssl_rand_hex_32
AP_JWT_SECRET=your_jwt_secret_here_use_openssl_rand_hex_32
AP_CODE_SECRETS_KEY=your_code_secrets_key_here_use_openssl_rand_hex_32

# =============================================================================
# Server Settings (FlowPoint)
# =============================================================================
AP_PORT=80
AP_SSL_ENABLED=false

# =============================================================================
# Postgres Container Configuration
# =============================================================================
POSTGRES_DB=flowpoint
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_dev_password
POSTGRES_VERSION=16-alpine

# Expose PostgreSQL port externally (for dev tools like pgAdmin, DBeaver)
# Set to empty to disable external access
POSTGRES_EXTERNAL_PORT=5432

# =============================================================================
# Redis Container Configuration
# =============================================================================
REDIS_VERSION=7-alpine

# Expose Redis port externally (for dev tools like RedisInsight)
# Set to empty to disable external access
REDIS_EXTERNAL_PORT=6379

# =============================================================================
# Nginx Configuration
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
SSL_CERTS_PATH=/etc/ssl/flowpoint-dev

# =============================================================================
# Additional Database Names (for NocoDB, Langflow)
# =============================================================================
NOCODB_DB=nocodb
LANGFLOW_DB=langflow

# =============================================================================
# Registration & Access Control
# =============================================================================

# FlowPoint - User registration control (true/false)
AP_SIGN_UP_ENABLED=true
AP_USER_INVITATION_ONLY=false

# NocoDB - Invitation-only signup
NC_INVITE_ONLY_SIGNUP=false
NC_DISABLE_EMAIL_AUTH=false

# Langflow - Disable authentication (false=enabled, true=disabled)
LANGFLOW_DISABLE_AUTH=false

# =============================================================================
# Domain Configuration (primarily for production)
# =============================================================================
DOMAIN=flowpoint-dev.pointsolutions.me

# =============================================================================
# Image Versions
# =============================================================================
FLOWPOINT_IMAGE=flowpoint:0.7.0
